{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
    "exclude": ["node_modules"],
  "paths": {
    "@types/": ["./src/ocTypes/*.ts"]
  },
  "sourceMap": true,
  "lib": ["es2015"]
}
